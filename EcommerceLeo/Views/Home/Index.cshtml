<!-- letest product section -->
<section class="top-letest-product-section">
    <div class="container">
        <div class="section-title">
            <h2>PRODUTOS MAIS RECENTES</h2>
        </div>
        <div class="product-slider owl-carousel">
            @foreach (var item in Model)
            {
                if (item.idCateProd == 1)
                {
                    <div class="product-item">
                        <div class="pi-pic">
                            <img src="@Url.Content(item.urlFoto)" alt="">
                            <div class="pi-links">
                                <a href="@Url.Action("Detalhe","Produto",new { id = item.idProduto })" class="add-card"><i class="flaticon-bag"></i><span>Detalhes</span></a>
                                <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>
                            </div>
                        </div>
                        <div class="pi-text">
                            <h6>R$@Html.DisplayFor(modelItem => item.precoProduto)</h6>
                            <p>@Html.DisplayFor(modelItem => item.nmProduto) </p>
                        </div>
                    </div>
                }
            }            
        </div>
    </div>
</section>
<!-- letest product section end -->
