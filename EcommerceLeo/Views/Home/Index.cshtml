                                <div class="pi-links">
                                    <a href="@Url.Action("Detalhe","Produto",new { id = item.idProduto })" class="add-card"><i class="flaticon-bag"></i><span>Detalhes</span></a>
                                    
                                    @*<a href="@Url.Action("AddToCart","Home", new { id = item.idProduto })" class="add-card"><i class="flaticon-bag"></i><span>ADD CARRINHO</span></a>*@
