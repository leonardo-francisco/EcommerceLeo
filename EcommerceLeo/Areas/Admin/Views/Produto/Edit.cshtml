@model EcommerceLeo.Domain.Entities.Produto
@{
    ViewData["Title"] = "Edit";
}


<<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="glyphicon glyphicon-th"></span>
                        Editar Produto
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6 separator social-login-box">
                            <br>
                            <img alt="" class="img-thumbnail" src="@Url.Content(Model.urlFoto)">
                        </div>
                        <div style="margin-top:80px;" class="col-xs-6 col-sm-6 col-md-6 login-box">
                            <form asp-action="Edit" >
                                <div class="form-group">
                                    <label>Nome Produto</label>
                                    <input type="text" asp-for="nmProduto" />
                                </div>

                                <div class="form-group">
                                    <label>Categoria</label>
                                    <select asp-for="idCateProd" asp-items="@ViewBag.Categoria">
                                        <option> -- Selecione a categoria --</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label>Preço do Produto</label>
                                    <input type="text" asp-for="precoProduto" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6"></div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <button class="btn icon-btn-save btn-success" type="submit">
                                <span class="btn-save-label"><i class="glyphicon glyphicon-floppy-disk"></i></span>Upddate
                            </button>
                            <input type="reset" class="btn btn-dark" value="Limpar" />
                            <a href="@Url.Action("Index","Produto", new {area = "Admin" })" class="btn btn-outline-dark">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>